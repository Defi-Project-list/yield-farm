{
  "overrides": [
    {
      "files": ["contracts/**/*.sol"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": ["**/*.js", "**/*.ts"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "explicitTypes": "always"
      }
    }
  ]
}
